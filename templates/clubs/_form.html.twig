{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div style="text-align: center; margin-left: 25%; margin-right: auto">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'col-lg-8' }}) }}
        <div>
            <br>
            <br>
            <div style="color: #696969; font-size: 16px;">
                {{ form_label(form.nom_club, 'Nom du Club *') }}
            </div>
            {{ form_widget(form.nom_club) }}
            <br>
            <div style="color: #696969; font-size: 16px;">
                {{ form_label(form.ville_club, 'Ville *') }}
            </div>
            {{ form_widget(form.ville_club) }}
            <br>
            <div style="color: #696969; font-size: 16px;">
                {{ form_label(form.pays_club, 'Pays *') }}
            </div>
            {{ form_widget(form.pays_club) }}
        </div>
        <br>
            <button class="btn btn btn-success">{{ button_label|default('Ajouter') }}</button>
        <br>
        <br>
        <a href="{{ path('clubs_show') }}" class="btn btn-warning">Revenir a la liste des Clubs</a>
        <br>
        <br>
        <small>* Informations Obligatoire</small>
        <br>
        {{ form_end(form) }}
    </div>
{% endblock %}
