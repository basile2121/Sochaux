{% extends 'layout.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h3 style="padding:25px; text-align:center;">Le club</h3>
    <div class="col-lg-2 mx-auto" style="box-shadow: 0px 2px 5px 1px rgba(0, 0, 0, 0.7); padding:0px 0px 0px 0px">
    <table class="table table-light table-striped table-bordered table-responsive-lg">
        <tr>
            <th scope="col">Nom Club</th>
            <td class="text-center">{{ club.nomClub }}</td>
        </tr>
        <tr>
            <th scope="col">Ville</th>
            <td class="text-center">{{ club.villeClub }}</td>
        </tr>
        <tr>
            <th scope="col">Pays</th>
            <td class="text-center">{{ club.paysClub }}</td>
        </tr>
    </table>
    </div>

{% endblock %}
