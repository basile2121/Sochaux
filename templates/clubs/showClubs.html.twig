{% extends 'layout.html.twig' %}

{% block title %}Les Clubs{% endblock %}

{% block body %}

    <h1 style="text-align: center">Listes des Clubs</h1>
    <br>
    <table style="text-align: center" class="table" >
        <thead>
        <tr class="table-secondary">
            <th>Nom Club</th>
            <th>Ville</th>
            <th>Pays</th>
            <th>Club</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.nomClub }}</td>
                <td>{{ club.villeClub }}</td>
                <td>{{ club.paysClub }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('club_show', {'id': club.id}) }}">Informations</a>
                </td>

                <td>
                    <a  class="btn btn-info" href="{{ path('clubs_edit', {'id': club.id}) }}">Modifier</a>
                    <br>
                    <br>
                    <form method="post" action="{{ path('clubs_delete', {'id': club.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce club');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ club.id) }}">
                        <button class="btn btn-info">Supprimer</button>
                    </form>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun Joueurs de trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('clubs_add') }}">Ajouter</a>


{% endblock %}


