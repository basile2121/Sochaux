{% extends 'layout.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ contrat.joueur.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ contrat.joueur.prenom }}</td>
        </tr>
        <tr>
            <th>Club</th>
            <td>{{ contrat.club }}</td>
        </tr>
        <tr>
            <th>Date Debut</th>
            <td>{{ contrat.dateDebut ? contrat.dateDebut|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Date Fin</th>
            <td>{{ contrat.dateFin ? contrat.dateFin|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
