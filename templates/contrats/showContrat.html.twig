{% extends 'layout.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <div class="container-fluid " style="padding:0px 7em; ">
        <h3 style="padding:25px; text-align:center; color: #171a1d; font-weight: bold">Contrat de {{ contrat.joueur.prenom }} {{ contrat.joueur.nom }}</h3>
            <table class="table " style=" margin-left: 15%; width:70%; border-radius: 20px ;box-shadow: -1px 2px 5px 1px rgba(0, 0, 0, 0.7); background-color: #2f3640;">
                <tbody style="text-align: center; color: #F9F9FF;  padding-bottom: 20px">
                    <tr>
                        <th style="text-align: center; font-size: 20px " scope="col">Nom</th>
                        <td class="text-center">{{ contrat.joueur.nom }}</td>
                    </tr>
                    <tr>
                        <th style="text-align: center; font-size: 20px " scope="col">Prenom</th>
                        <td class="text-center">{{ contrat.joueur.prenom }}</td>
                    </tr>
                    <tr>
                        <th style="text-align: center; font-size: 20px " scope="col">Club</th>
                        <td class="text-center">{{ contrat.club }}</td>
                    </tr>
                    <tr>
                        <th style="text-align: center; font-size: 20px " scope="col">Date Debut</th>
                        <td class="text-center">{{ contrat.dateDebut ? contrat.dateDebut|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th style="text-align: center; font-size: 20px " scope="col">Date Fin</th>
                        <td class="text-center">{{ contrat.dateFin ? contrat.dateFin|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>

        <a style="width: 300px;" class="btn btn-warning center-block size" href="{{ path('contrats_show') }}">Revenir Ã  la liste des Contrats</a>

    </div>
{% endblock %}
