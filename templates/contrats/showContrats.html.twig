{% extends 'layout.html.twig' %}

{% block title %}Les Contrats{% endblock %}

{% block body %}
    <h1 style="text-align: center">Listes des Contrats</h1>
    <br>
    <table style="text-align: center" class="table" >
        <thead>
        <tr class="table-secondary">
            <th>Joueur</th>
            <th>Prix</th>
            <th>Club</th>
            <th>Date Debut</th>
            <th>Date Fin</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for contrat in contrats %}
            <tr>
                <td>{{ contrat.joueur }}</td>
                <td>{{ contrat.prix }} €</td>
                <td>{{ contrat.club }}</td>
                <td>{{ contrat.dateDebut ? contrat.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.dateFin ? contrat.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('contrat_show', {'id': contrat.id}) }}">Informations</a>
                    <br>
                    <br>
                    <a  class="btn btn-info" href="{{ path('contrats_edit', {'id': contrat.id}) }}">Modifier</a>
                    <br>
                    <br>
                    <form method="post" action="{{ path('contrats_delete', {'id': contrat.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce contrat');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat.id) }}">
                        <button class="btn btn-info">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun Contrat de trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('contrats_add') }}">Ajouter un Contrat</a>


{% endblock %}


