{% extends 'layout.html.twig' %}

{% block title %}Les Contrats{% endblock %}

{% block body %}

    <h1 style=" text-align:center; color: #171a1d; font-weight: bold">Contrats du Club</h1>
    <br>

    <h2 style=" text-align:center;">Effectif Professionel</h2>
    <div class="container-fluid" style="padding:0px 7em; ">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-bordered"  style="border-radius: 10px;box-shadow: -1px 2px 5px 1px rgba(0, 0, 0, 0.7); ">
                    <thead  class="thead-dark">
                    <tr class="text-center">
                        <th scope="col">Prenom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Date Debut</th>
                        <th scope="col">Date Fin</th>
                        <th scope="col">Prix</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contrat in contrats %}
                        {% if contrat.pro %}
                            <tr>
                                <td style="color: black">{{ contrat.prenom }}</td>
                                <td style="color: black">{{ contrat.nom }}</td>
                                <td style="color: green">{{ contrat.date_debut ? contrat.date_debut|date('d/m/Y') : ''}}</td>
                                <td style="color: red">{{ contrat.date_fin ? contrat.date_fin|date('d/m/Y') : '' }}</td>
                                <td>{{ contrat.prix }} €</td>
                                <td><a class="btn btn-success" href="{{ path('joueur_show' , {'id' : contrat.joueur_id}) }}">Acceder au Joueur</a></td>
                            </tr>
                        {% endif %}
                        {% if contrat is empty %}
                            <tr>
                                <td colspan="8">Aucun Contrat</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <h2 style=" text-align:center;">Effectif de Formation</h2>
    <div class="container-fluid" style="padding:0px 7em; ">
        <div class="row">
