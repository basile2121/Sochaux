                    <tr class="text-center">
                        <th scope="col">Prenom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Date Debut</th>
                        <th scope="col">Date Fin</th>
                        <th scope="col">Prix</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contrat in contrats %}
                        {% if not contrat.pro %}
                            <tr>
                                <td style="color: black">{{ contrat.prenom }}</td>
                                <td style="color: black">{{ contrat.nom }}</td>
                                <td style="color: green">{{ contrat.date_debut ? contrat.date_debut|date('d/m/Y') : ''}}</td>
                                <td style="color: red">{{ contrat.date_fin ? contrat.date_fin|date('d/m/Y') : '' }}</td>
                                <td>{{ contrat.prix }} €</td>
                                <td><a class="btn btn-success" href="{{ path('joueur_show' , {'id' : contrat.joueur_id}) }}">Acceder au Joueur</a></td>
                            </tr>
                        {% endif %}
                        {% if contrat is empty %}
                            <tr>
                                <td colspan="8">Aucun Contrat</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>



{% endblock %}

