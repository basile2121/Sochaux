{% extends 'layout.html.twig' %}

{% block title %}Notification{% endblock %}

{% block body %}
    <h1>Notification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{{ notification.dateEnvoie ? notification.dateEnvoie|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ notification.messageNotification }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('notifications_show') }}">Revenir a la liste des notifications</a>

    <a class="btn btn-success" href="{{ path('notifications_edit', {'id': notification.id}) }}">Modifier</a>

{% endblock %}
