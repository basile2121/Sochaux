{% extends 'layout.html.twig' %}

{% block title %}Rapport de Match{% endblock %}

{% block body %}
    <h1 style="text-align: center">Cree un Rapport de Match</h1>
    <br>


    <div style="background-color: #9fa9b7;">
        <br>
        <br>
        <h2 style="text-align: center">Le recapitulatif du match</h2>
        <br>
        <div style="border: 20px;">
            {{ include('rapportMatch/match/showMatch.html.twig') }}
         </div>
        <br>
    </div>

    <div style="background-color: #0c6251">
        <br>
        <h2 style="text-align: center">Equipe 1</h2>
        <a style="" class="btn btn-success" href="{{ path('clubs_show') }}">Selectioner la premier equipe</a>
        <img src="{{ asset('images/terrain.png') }}" alt="" style="margin: 0px 10px 0px 60%">
        <br>
        <h2 style="text-align: center">Equipe 2</h2>
        <a class="btn btn-success" href="{{ path('clubs_show') }}">Selectioner la deuxieme equipe</a>
        <img src="{{ asset('images/terrain.png') }}" alt="" style="margin: 0px 10px 0px 60%">
        <br>
        <br>
    </div>

    <div style="background-color: #9fa9b7">
        <h2 style="text-align: center">Le commentaire</h2>
        {#{ include('rapportMatch/commentaire/showCommentaires.html.twig') }#}
        <h3 style="text-align: center">Le tableau de commentaire</h3>

        <div class="container-fluid " style="padding:0px 7em; ">
            <table class="table table-striped table-bordered " style="border-radius: 10px;box-shadow: -1px 2px 5px 1px rgba(0, 0, 0, 0.7); ">
                <thead class="thead-dark">
                <tr class="table-secondary">
                    <th scope="col">Text</th>
                    <th scope="col">Minutes de Commentaire</th>
                </tr>
                </thead>
                <tbody>
                {% for commentaire in commentaires %}
                    <tr class="text-center">
                        <td>{{ commentaire.texte }}</td>
                        <td>{{ commentaire.minuteCommentaire }} minutes</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucun Commentaire</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


        <h3 style="text-align: center">Ajouter un commentaire commentaire</h3>
        {{ include('rapportMatch/commentaire/_form.html.twig') }}
    </div>
    <h2 style="text-align: center" class="btn btn-info">Enregistrer le rapport</h2>

{% endblock %}
