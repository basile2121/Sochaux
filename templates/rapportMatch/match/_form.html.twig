{% form_theme formMatch 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div style="text-align: center; margin-left: 20%; margin-right: 20%; border: 2mm ridge rgba(70,130,180 , 2); background-color: #9fa9b7">
        {{ form_start(formMatch) }}
        <div class="row" style="margin: 3% ">
            <div class="col">
                <div style="color: #696969; font-size: 18px;">
                    {{ form_label(formMatch.conditions) }}
                </div>
                {{ form_widget(formMatch.conditions) }}
            </div>
            <br>
            <div class="col">
                <div style="color: #696969; font-size: 18px;">
                    {{ form_label(formMatch.lieux) }}
                </div>
                {{ form_widget(formMatch.lieux) }}
            </div>
            <br>
            <div class="col">
                <div style="color: #696969; font-size: 18px;">
                    {{ form_label(formMatch.paysMatch) }}
                </div>
                {{ form_widget(formMatch.paysMatch) }}
            </div>
            <br>
            <div class="col">
                <div style="color: #696969; font-size: 18px;">
                    {{ form_label(formMatch.date) }}
                </div>
                {{ form_widget(formMatch.date) }}
            </div>
            <br>
        </div>


        <button class="btn btn-success">{{ button_label|default('Ajouter') }}</button>
        {{ form_end(formMatch) }}

    </div>
    <br>
    <bt></bt>
    <div style="text-align: center">
        <a href="{{ path('index_index') }}" class="btn btn-warning">Consulter les Matchs Existants</a>
    </div>

{% endblock %}
