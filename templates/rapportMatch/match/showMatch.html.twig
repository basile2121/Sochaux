{% block body %}

    <h2 style="text-align: center">{{ match.tournoi }}</h2>

    <table class="table table-striped table-bordered"  style=" margin-left: 25%; width: 50%; border-radius: 10px;box-shadow: -1px 2px 5px 1px rgba(0, 0, 0, 0.7); ">
        <tbody>

        <tr>
            <th>Lieux</th>
            <td>{{ match.lieux }}</td>
        </tr>
        <tr>
            <th>Conditions</th>
            <td>{{ match.conditions }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ match.date ? match.date|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
