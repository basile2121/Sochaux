{% form_theme formTactique 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div style="text-align: center; margin-left: 20%; margin-right: 20%; border: 2mm ridge rgba(70,130,180 , 2); background-color: #9fa9b7">
        {{ form_start(formTactique) }}
        <div class="row" style="margin: 3% ">
            <div class="col">
                <div style="color: #696969; font-size: 18px;">
                    {{ form_label(formTactique.tactique_first_club) }}
                </div>
                {{ form_widget(formTactique.tactique_first_club) }}
            </div>
            <div class="col">
                <div style="color: #696969; font-size: 18px;">
                    {{ form_label(formTactique.tactique_second_club) }}
                </div>
                {{ form_widget(formTactique.tactique_second_club) }}
            </div>

        </div>

        <button class="btn btn-success">{{ button_label|default('Ajouter') }}</button>
        {{ form_end(formTactique) }}

    </div>
    <br>

{% endblock %}
