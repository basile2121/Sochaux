{% extends 'layout.html.twig' %}

{% block title %}Tournoi{% endblock %}

{% block body %}
    <h3 style="padding:25px; text-align:center; color: #171a1d; font-weight: bold">Le Tournoi de {{ tournoi.nomTournoi }} </h3>
    <table class="table " style=" margin-left: 15%; width:70%; border-radius: 20px ;box-shadow: -1px 2px 5px 1px rgba(0, 0, 0, 0.7); background-color: #2f3640;">
        <tbody style="text-align: center; color: #F9F9FF;  padding-bottom: 20px">
            <tr>
                <th style="text-align: center; font-size: 20px " scope="col">Nom</th>
                <td class="text-center">{{ tournoi.nomTournoi() }}</td>
            </tr>
            <tr>
                <th style="text-align: center; font-size: 20px " scope="col">Pays</th>
                <td class="text-center">{{ tournoi.paysTournoi }}</td>
            </tr>
        </tbody>
    </table>

    <a style="width: 300px;" class="btn btn-warning center-block size" href="{{ path('tournois_show') }}">Revenir Ã  la liste des Tournois</a>

{% endblock %}
